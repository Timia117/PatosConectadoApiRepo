{
  "name": "patos",
  "private": true,
  "version": "1.0.0",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build:web": "vite build",
    "electron-dev": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "patos.conectados.app",
    "productName": "PatosConectados",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-web/**/*",
      "main.cjs",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@fontsource/baloo-2": "^5.2.7",
    "@tailwindcss/vite": "^4.1.16",
    "axios": "^1.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^26.6.10",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.1.7"
  }
}
